model Ordinateur {
  id        Int     @id @default(autoincrement())
  adressMac String
  nom       String
  prenom    String
  mail      String  @unique
  password  String
  age       Int?
  genre     String?
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
}

model User {
  id           Int          @id @default(autoincrement())
  socialreason String
  lastName     String       @db.VarChar(255)
  siret        String       @unique
  email        String       @unique
  password     String
  oridnateurs  Ordinateur[]
}

