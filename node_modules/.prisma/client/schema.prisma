model Employe {
  id         Int         @id @default(autoincrement())
  userid     Int
  user       User        @relation(fields: [userid], references: [id])
  nom        String
  prenom     String
  email      String      @unique
  password   String
  age        Int?
  genre      String?
  ordinateur Ordinateur? @relation
}

model Ordinateur {
  id        Int      @id @default(autoincrement())
  adressMac String
  employeId Int?     @unique
  employe   Employe? @relation(fields: [employeId], references: [id])
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model User {
  id           Int          @id @default(autoincrement())
  socialreason String
  lastName     String       @db.VarChar(255)
  siret        String       @unique
  email        String       @unique
  password     String
  ordinateurs  Ordinateur[]
  employes     Employe[]
}

